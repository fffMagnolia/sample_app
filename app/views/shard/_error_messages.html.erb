<% if @user.errors.any? %>
 <div id="error_explanation">
    <div class="alert alert-danger">
    <!-- plualize: 状況に応じて英単語を複数形にしてくれる -->
    The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>